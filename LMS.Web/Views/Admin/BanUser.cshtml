@model BanViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}

<h1>Ban User, @Model.Username </h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BanUserConfirmation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" placeholder="Please, enter Description..." />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpirationDate" class="control-label"></label>
                <input asp-for="ExpirationDate" class="form-control" />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>
                <button class="btn btn-primary btn-lg" asp-controller="Admin" asp-action="BanUserConfirmation" asp-route-userId="@Model.UserId">Ban-User</button>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to Homepage</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


