@model IEnumerable<NotificationViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}
<section class="recomended-sec">
    <div class="container">
        <div class="title">
            <h2 class="align-content-center">Notifications</h2>
            <hr>
        </div>
    </div>
</section>
    @*<div>
        <input type ="text" id="search-bar" class="form-control">
        @*Search input field ... s id .. *@
        @*</div>*@
@if (Model.Count() == 0)
{
    <h1>
        You have no notifications yet.
    </h1>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th class="">
                    Notification From
                </th>
                <th>
                    Notification Description
                </th>
                <th class="">
                    Notification Date
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (item.IsSeen == true)
                {
                    <tr>
                        <td>
                            <dl class="row">
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => item.Username)
                                </dd>
                            </dl>
                        </td>
                        <td>
                            <dl class="row">
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => item.Description)
                                </dd>
                            </dl>
                        </td>
                        <td>
                            <dl class="row">
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => item.EventDate)
                                </dd>
                            </dl>
                        </td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>
                            <dl class="row">
                                <dd class="col-sm-10">
                                    <b>
                                        @Html.DisplayFor(model => item.Username)
                                    </b>
                                </dd>
                            </dl>
                        </td>
                        <td>
                            <dl class="row">
                                <dd class="col-sm-10">
                                    <b>
                                        @Html.DisplayFor(model => item.Description)
                                    </b>
                                </dd>
                            </dl>
                        </td>
                        <td>
                            <dl class="row">
                                <dd class="col-sm-10">
                                    <b>
                                        @Html.DisplayFor(model => item.EventDate)
                                    </b>
                                </dd>
                            </dl>
                        </td>
                        <td>
                            <form asp-action="MarkAsSeen" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn border-0">Mark as seen</button>
                            </form>
                            
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}

@section  Scripts {
    <script>
        $('form').on('submit', function (e) {
            e.preventDefault();

            const thisForm = $(this);

            $.post(thisForm.attr('action'), {}, response => thisForm.closest('tr').replaceWith(response));
        });
    </script>
}