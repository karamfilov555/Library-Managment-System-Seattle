        <tr>
            <td>
                <img src="@Model.First().CoverImageUrl" onerror="srcset='images/no-image-available-icon.jpg'" height="250" width="250">
            </td>

            <td>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => Model.First().Title)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => Model.First().Title)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => Model.First().AuthorName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => Model.First().AuthorName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => Model.First().SubjectCategoryName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => Model.First().SubjectCategoryName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => Model.First().Pages)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => Model.First().Pages)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => Model.First().Year)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => Model.First().Year)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => Model.First().Country)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => Model.First().Country)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => Model.First().Language)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => Model.First().Language)
                    </dd>
                    <dt class="col-sm-2">
