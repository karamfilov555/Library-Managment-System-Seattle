@model ICollection<ReviewViewModel>

@{
    ViewData["Title"] = "Review";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}

<section class="recomended-sec">
    <div class="container">
        <div class="title">
            <h2 class="align-content-center">Review Book</h2>
            <hr>
        </div>
    </div>
</section>
<table class="table">
    <thead>
        <tr>
            <th class="">
                Cover
            </th>

            <th>
                Book Description
            </th>
            <th class="">

            </th>
            <th class="">

            </th>
        </tr>
    </thead>
    <tbody>
        @*@foreach (var item in Model)
