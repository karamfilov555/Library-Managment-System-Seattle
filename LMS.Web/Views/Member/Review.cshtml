@model ReviewViewModel

@{
    ViewData["Title"] = "Review";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}

<h1>Review</h1>

<div class="justify-content-xl-center">
    <div class="col-md-4">
        <form asp-action="Review" asp-route-id="@Model.BookId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" placeholder="Please, enter description..." />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" placeholder="Please, enter grade..." />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>